@model UpdateExpenseDto
@{ ViewData["Title"] = "Editar Gasto"; var expenseId = ViewBag.ExpenseId as Guid?; }
<div class="page-header"><h1><i class="bi bi-pencil"></i> Editar Gasto</h1></div>
<div class="row"><div class="col-md-8"><div class="card"><div class="card-body"><form asp-action="Edit" asp-route-id="@expenseId" method="post">
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<div class="mb-3"><label asp-for="Description">Descripción</label><input asp-for="Description" class="form-control"/><span asp-validation-for="Description" class="text-danger"></span></div>
<div class="row"><div class="col-md-6 mb-3"><label asp-for="Amount">Monto</label><input asp-for="Amount" type="number" class="form-control" step="0.01"/></div>
<div class="col-md-6 mb-3"><label asp-for="ExpenseDate">Fecha</label><input asp-for="ExpenseDate" type="date" class="form-control"/></div></div>
<div class="row"><div class="col-md-6 mb-3"><label asp-for="ExpenseCategoryId">Categoría</label><select asp-for="ExpenseCategoryId" class="form-select" asp-items="ViewBag.Categories"><option value="">Sin categoría</option></select></div>
<div class="col-md-6 mb-3"><label asp-for="Vendor">Proveedor</label><input asp-for="Vendor" class="form-control"/></div></div>
<div class="row"><div class="col-md-6 mb-3"><label asp-for="ReceiptNumber">N° Comprobante</label><input asp-for="ReceiptNumber" class="form-control"/></div>
<div class="col-md-6 mb-3"><label asp-for="AttachmentUrl">URL Adjunto</label><input asp-for="AttachmentUrl" class="form-control" type="url"/></div></div>
<div class="mb-3"><label asp-for="Notes">Notas</label><textarea asp-for="Notes" class="form-control" rows="3"></textarea></div>
<div class="mb-3"><div class="form-check form-switch"><input asp-for="IsPaid" class="form-check-input"/><label asp-for="IsPaid" class="form-check-label">Pagado</label></div></div>
<div class="d-flex gap-2"><button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Guardar</button><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x"></i> Cancelar</a></div>
</form></div></div></div></div>
@section Scripts { <partial name="_ValidationScriptsPartial"/> }
