@model CustomerDto
@{ ViewData["Title"] = "Eliminar Cliente"; }
<div class="page-header"><h1 class="text-danger"><i class="bi bi-trash"></i> Eliminar Cliente</h1></div>
<div class="row justify-content-center"><div class="col-md-8"><div class="alert alert-danger d-flex align-items-center"><i class="bi bi-exclamation-triangle-fill me-2" style="font-size: 2rem;"></i><div><h5 class="alert-heading">¡Atención!</h5><p class="mb-0">Estás a punto de eliminar este cliente permanentemente.</p></div></div>
<div class="card"><div class="card-body"><h4 class="mb-4">¿Confirmar eliminación?</h4>
<div class="row mb-4"><div class="col-md-2 text-center"><i class="bi bi-person-circle" style="font-size: 4rem; color: #dc3545;"></i></div><div class="col-md-10"><h5>@Model.FullName</h5><p class="text-muted mb-2"><i class="bi bi-envelope"></i> @Model.Email</p>@if(!string.IsNullOrEmpty(Model.Phone)){<p class="text-muted"><i class="bi bi-telephone"></i> @Model.Phone</p>}</div></div>
<form asp-action="Delete" method="post"><div class="d-flex gap-2 justify-content-end"><a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-x-circle"></i> Cancelar</a><button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-trash"></i> Eliminar</button></div></form>
</div></div></div></div>
