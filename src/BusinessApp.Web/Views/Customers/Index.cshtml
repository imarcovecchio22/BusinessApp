@model List<CustomerDto>

@{
    ViewData["Title"] = "Clientes";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-people"></i> Clientes</h1>
            <p class="text-muted mb-0">Gestiona tu cartera de clientes</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Nuevo Cliente
            </a>
        </div>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label"><i class="bi bi-search"></i> Buscar</label>
                <input type="text" name="searchTerm" class="form-control" placeholder="Nombre, email, teléfono..." value="@ViewBag.SearchTerm" />
            </div>
            <div class="col-md-2">
                <label class="form-label"><i class="bi bi-toggle-on"></i> Estado</label>
                <select name="isActive" class="form-select">
                    <option value="">Todos</option>
                    <option value="true" selected="@(ViewBag.IsActive == true)">Activos</option>
                    <option value="false" selected="@(ViewBag.IsActive == false)">Inactivos</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label"><i class="bi bi-geo-alt"></i> Ciudad</label>
                <input type="text" name="city" class="form-control" placeholder="Ciudad" value="@ViewBag.City" />
            </div>
            <div class="col-md-2">
                <label class="form-label"><i class="bi bi-globe"></i> País</label>
                <input type="text" name="country" class="form-control" placeholder="País" value="@ViewBag.Country" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Buscar
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Contacto</th>
                            <th>Ubicación</th>
                            <th>Estado</th>
                            <th>Registrado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle me-2" style="font-size: 2rem; color: #667eea;"></i>
                                        <div>
                                            <strong>@customer.FullName</strong>
                                            @if (!string.IsNullOrEmpty(customer.TaxId))
                                            {
                                                <br><small class="text-muted">@customer.TaxId</small>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div><i class="bi bi-envelope"></i> @customer.Email</div>
                                    @if (!string.IsNullOrEmpty(customer.Phone))
                                    {
                                        <div><i class="bi bi-telephone"></i> @customer.Phone</div>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(customer.City))
                                    {
                                        <div>@customer.City</div>
                                    }
                                    @if (!string.IsNullOrEmpty(customer.Country))
                                    {
                                        <small class="text-muted">@customer.Country</small>
                                    }
                                </td>
                                <td>
                                    @if (customer.IsActive)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">@customer.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@customer.Id" class="btn btn-outline-info" title="Ver">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@customer.Id" class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@customer.Id" class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3 text-muted">
                <i class="bi bi-info-circle"></i> Total: <strong>@Model.Count</strong> clientes
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No se encontraron clientes</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus"></i> Crear Primer Cliente
                </a>
            </div>
        }
    </div>
</div>
