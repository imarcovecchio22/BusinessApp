@model CustomerDto
@{ ViewData["Title"] = "Detalles del Cliente"; }
<div class="page-header"><div class="d-flex justify-content-between align-items-center"><div><h1><i class="bi bi-person-circle"></i> Cliente</h1></div><div><a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a></div></div></div>
<div class="row"><div class="col-md-8"><div class="card"><div class="card-body">
<div class="row mb-4"><div class="col-md-2 text-center"><i class="bi bi-person-circle" style="font-size: 5rem; color: #667eea;"></i></div><div class="col-md-10"><h3>@Model.FullName</h3><p class="text-muted mb-1"><i class="bi bi-envelope"></i> @Model.Email</p>@if (!string.IsNullOrEmpty(Model.Phone)){<p class="text-muted mb-1"><i class="bi bi-telephone"></i> @Model.Phone</p>}<div>@if (Model.IsActive){<span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>}else{<span class="badge bg-danger"><i class="bi bi-x-circle"></i> Inactivo</span>}</div></div></div><hr>
<div class="row g-3"><div class="col-md-6"><div class="info-item"><label class="text-muted small mb-1">Nombre</label><p class="mb-0"><strong>@Model.FirstName</strong></p></div></div>
<div class="col-md-6"><div class="info-item"><label class="text-muted small mb-1">Apellido</label><p class="mb-0"><strong>@Model.LastName</strong></p></div></div>
<div class="col-md-6"><div class="info-item"><label class="text-muted small mb-1">Email</label><p class="mb-0"><strong>@Model.Email</strong></p></div></div>
@if(!string.IsNullOrEmpty(Model.Phone)){<div class="col-md-6"><div class="info-item"><label class="text-muted small mb-1">Teléfono</label><p class="mb-0"><strong>@Model.Phone</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.Address)){<div class="col-12"><div class="info-item"><label class="text-muted small mb-1">Dirección</label><p class="mb-0"><strong>@Model.Address</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.City)){<div class="col-md-4"><div class="info-item"><label class="text-muted small mb-1">Ciudad</label><p class="mb-0"><strong>@Model.City</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.Country)){<div class="col-md-4"><div class="info-item"><label class="text-muted small mb-1">País</label><p class="mb-0"><strong>@Model.Country</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.TaxId)){<div class="col-md-4"><div class="info-item"><label class="text-muted small mb-1">DNI/CUIT</label><p class="mb-0"><strong>@Model.TaxId</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.Notes)){<div class="col-12"><div class="info-item"><label class="text-muted small mb-1">Notas</label><p class="mb-0">@Model.Notes</p></div></div>}
</div></div></div></div><div class="col-md-4"><div class="card"><div class="card-body"><h5 class="card-title"><i class="bi bi-gear text-primary"></i> Acciones</h5><hr><div class="d-grid gap-2"><a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a><a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a></div></div></div></div></div>
<style>.info-item{background:#f8f9fa;padding:1rem;border-radius:8px;border-left:3px solid #667eea;}</style>
