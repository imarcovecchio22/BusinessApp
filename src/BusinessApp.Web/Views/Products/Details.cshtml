@model ProductDto
@{ ViewData["Title"] = "Detalles del Producto"; }
<div class="page-header"><div class="d-flex justify-content-between"><div><h1><i class="bi bi-box-seam"></i> Producto</h1></div><div><a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a></div></div></div>
<div class="row"><div class="col-md-8"><div class="card"><div class="card-body">
<div class="row mb-4"><div class="col-md-2 text-center"><i class="bi @(Model.Type == ProductType.Product ? "bi-box-seam" : "bi-tools")" style="font-size: 5rem; color: #667eea;"></i></div><div class="col-md-10"><h3>@Model.Name</h3><p class="text-muted">@Model.Description</p><div><span class="badge @(Model.Type == ProductType.Product ? "bg-primary" : "bg-info")">@Model.TypeName</span>@if(!string.IsNullOrEmpty(Model.CategoryName)){<span class="badge bg-secondary ms-1">@Model.CategoryName</span>}@if(Model.IsActive){<span class="badge bg-success ms-1">Activo</span>}else{<span class="badge bg-danger ms-1">Inactivo</span>}</div></div></div><hr>
<div class="row g-3"><div class="col-md-6"><div class="info-item"><label class="text-muted small">Precio</label><p class="mb-0"><strong style="font-size:1.5em;color:#667eea;">$@Model.Price.ToString("N2")</strong></p></div></div>
@if(Model.Cost.HasValue){<div class="col-md-6"><div class="info-item"><label class="text-muted small">Costo</label><p class="mb-0"><strong>$@Model.Cost.Value.ToString("N2")</strong></p></div></div>}
@if(Model.ProfitMargin.HasValue){<div class="col-md-6"><div class="info-item"><label class="text-muted small">Margen de Ganancia</label><p class="mb-0"><strong>@Model.ProfitMargin.Value.ToString("N2")%</strong></p></div></div>}
@if(!string.IsNullOrEmpty(Model.Sku)){<div class="col-md-6"><div class="info-item"><label class="text-muted small">SKU</label><p class="mb-0"><strong>@Model.Sku</strong></p></div></div>}
@if(Model.Type == ProductType.Product){<div class="col-md-6"><div class="info-item" style="border-left-color: @(Model.IsOutOfStock ? "#ef4444" : Model.IsLowStock ? "#f59e0b" : "#10b981")"><label class="text-muted small">Stock Actual</label><p class="mb-0"><strong style="font-size:1.3em;">@Model.Stock</strong>@if(Model.MinStock.HasValue){<small class="text-muted"> (Min: @Model.MinStock)</small>}</p>@if(Model.IsOutOfStock){<span class="badge bg-danger mt-1">Sin Stock</span>}else if(Model.IsLowStock){<span class="badge bg-warning text-dark mt-1">Stock Bajo</span>}</div></div>}
</div></div></div></div><div class="col-md-4"><div class="card"><div class="card-body"><h5><i class="bi bi-gear text-primary"></i> Acciones</h5><hr><div class="d-grid gap-2"><a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a><a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</a><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a></div></div></div></div></div>
<style>.info-item{background:#f8f9fa;padding:1rem;border-radius:8px;border-left:3px solid #667eea;}</style>
