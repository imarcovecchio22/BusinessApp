@model ProductDto
@{ ViewData["Title"] = "Eliminar Producto"; }
<div class="page-header"><h1 class="text-danger"><i class="bi bi-trash"></i> Eliminar Producto</h1></div>
<div class="row justify-content-center"><div class="col-md-8"><div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.</div>
<div class="card"><div class="card-body"><h4>¿Eliminar "@Model.Name"?</h4><div class="row mb-3"><div class="col-md-6"><p class="text-muted mb-1">SKU: @Model.Sku</p><p class="text-muted mb-1">Precio: $@Model.Price.ToString("N2")</p></div><div class="col-md-6"><p class="text-muted mb-1">Tipo: @Model.TypeName</p>@if(Model.Type == ProductType.Product){<p class="text-muted mb-1">Stock: @Model.Stock</p>}</div></div>
<form asp-action="Delete" method="post"><div class="d-flex gap-2"><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a><button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button></div></form>
</div></div></div></div>
