@model UpdateProductDto
@{ ViewData["Title"] = "Editar Producto"; var productId = ViewBag.ProductId as Guid?; }
<div class="page-header"><h1><i class="bi bi-pencil"></i> Editar Producto</h1></div>
<div class="row"><div class="col-md-8"><div class="card"><div class="card-body"><form asp-action="Edit" asp-route-id="@productId" method="post">
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<div class="row"><div class="col-md-8 mb-3"><label asp-for="Name" class="form-label">Nombre</label><input asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span></div>
<div class="col-md-4 mb-3"><label asp-for="Sku" class="form-label">SKU</label><input asp-for="Sku" class="form-control" /></div></div>
<div class="mb-3"><label asp-for="Description" class="form-label">Descripción</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
<div class="row"><div class="col-md-4 mb-3"><label asp-for="Type" class="form-label">Tipo</label><select asp-for="Type" class="form-select"><option value="1">Producto</option><option value="2">Servicio</option></select></div>
<div class="col-md-4 mb-3"><label asp-for="CategoryId" class="form-label">Categoría</label><select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"><option value="">Sin categoría</option></select></div>
<div class="col-md-4 mb-3"><label asp-for="ImageUrl" class="form-label">URL Imagen</label><input asp-for="ImageUrl" class="form-control" /></div></div>
<div class="row"><div class="col-md-4 mb-3"><label asp-for="Price" class="form-label">Precio</label><input asp-for="Price" class="form-control" type="number" step="0.01" /></div>
<div class="col-md-4 mb-3"><label asp-for="Cost" class="form-label">Costo</label><input asp-for="Cost" class="form-control" type="number" step="0.01" /></div></div>
<div class="row"><div class="col-md-6 mb-3"><label asp-for="Stock" class="form-label">Stock</label><input asp-for="Stock" class="form-control" type="number" /></div>
<div class="col-md-6 mb-3"><label asp-for="MinStock" class="form-label">Stock Mínimo</label><input asp-for="MinStock" class="form-control" type="number" /></div></div>
<div class="mb-3"><div class="form-check form-switch"><input asp-for="IsActive" class="form-check-input" role="switch" /><label asp-for="IsActive" class="form-check-label">Activo</label></div></div>
<div class="d-flex gap-2"><button type="submit" class="btn btn-primary"><i class="bi bi-check-circle"></i> Guardar</button><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle"></i> Cancelar</a></div>
</form></div></div></div></div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
