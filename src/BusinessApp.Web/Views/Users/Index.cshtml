@model List<UserDto>

@{
    ViewData["Title"] = "Gesti√≥n de Usuarios";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-people"></i> Usuarios</h1>
            <p class="text-muted mb-0">Gestiona los usuarios del sistema</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Nuevo Usuario
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th><i class="bi bi-person"></i> Nombre</th>
                            <th><i class="bi bi-envelope"></i> Email</th>
                            <th><i class="bi bi-shield"></i> Roles</th>
                            <th><i class="bi bi-toggle-on"></i> Estado</th>
                            <th><i class="bi bi-calendar"></i> Creado</th>
                            <th class="text-end"><i class="bi bi-gear"></i> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle me-2">
                                            <i class="bi bi-person-circle" style="font-size: 2rem; color: #667eea;"></i>
                                        </div>
                                        <div>
                                            <strong>@user.FullName</strong>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-primary me-1">@role</span>
                                    }
                                    @if (!user.Roles.Any())
                                    {
                                        <span class="badge bg-secondary">Sin rol</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @user.CreatedAt.ToString("dd/MM/yyyy")
                                    </small>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-outline-info" 
                                           title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" 
                                           class="btn btn-outline-warning" 
                                           title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" 
                                           class="btn btn-outline-danger" 
                                           title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            <div class="mt-3 text-muted">
                <i class="bi bi-info-circle"></i> Total de usuarios: <strong>@Model.Count</strong>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <p class="text-muted mt-3">No hay usuarios registrados</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-person-plus"></i> Crear Primer Usuario
                </a>
            </div>
        }
    </div>
</div>
