@model CreateExpenseCategoryDto
@{ ViewData["Title"] = "Nueva Categoría"; }
<div class="page-header"><h1><i class="bi bi-plus"></i> Nueva Categoría de Gasto</h1></div>
<div class="row"><div class="col-md-8"><div class="card"><div class="card-body"><form asp-action="Create" method="post">
<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<div class="mb-3"><label asp-for="Name">Nombre *</label><input asp-for="Name" class="form-control"/><span asp-validation-for="Name" class="text-danger"></span></div>
<div class="mb-3"><label asp-for="Description">Descripción</label><textarea asp-for="Description" class="form-control" rows="2"></textarea></div>
<div class="mb-3"><label asp-for="Icon">Icono (Bootstrap)</label><input asp-for="Icon" class="form-control" placeholder="bi-wallet"/><small class="form-text text-muted">Ej: bi-wallet, bi-cart, bi-house</small></div>
<div class="mb-3"><label asp-for="Color">Color</label><input asp-for="Color" class="form-control" type="color" value="#667eea"/></div>
<div class="d-flex gap-2"><button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Crear</button><a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x"></i> Cancelar</a></div>
</form></div></div></div></div>
@section Scripts { <partial name="_ValidationScriptsPartial"/> }
